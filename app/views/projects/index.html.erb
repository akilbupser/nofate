<% if user_signed_in? %>
<div class="col-md-6 col-md-offset-3">
	<% @projects.each do |project| %>

		<%if project.completed? %>
			<div class="row item">

				<div class="col-md-8">
					<h1 style="opacity 0.5;"><strike><%= link_to project.title, project %></strike></h1>
					<h2 style="opacity 0.5;"><%= project.author %></h2>
					<p style="opacity 0.5;"> Comleted <%= time_ago_in_words(project.completed_at) %> ago </p>
				</div>

				<div class="col-md-2">
					<p><%= link_to "C",complete_project_path(project), method: :patch %></p>
				</div>	
				<div class="col-md-2">						
					<p><%= link_to "D", project, method: :delete, data: {confirm: "Are You sure?"} %></p>
				</div>
			</div>

				
			
		<%else%>
			<div class="row item">
				<div class="col-md-8">
					<h1><%= link_to project.title, project %></h1>
					<h2><%= project.author %></h2>
					<p> Created <%= time_ago_in_words(project.created_at) %> ago </p>
				</div>
				<div class="col-md-2">
					<p><%= link_to "C", complete_project_path(project), method: :patch %></p>
				</div>
				<div class="col-md-2">
					<p><%= link_to "D", project, method: :delete, data: {confirm: "Are You sure?"} %></p>
				</div>
			</div>

		<% end %>
	<% end %>
</div>
<% else %>
	<%= render 'layouts/static_landing_page' %>
<% end %>
	